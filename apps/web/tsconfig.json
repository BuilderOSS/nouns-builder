{
  "exclude": [
    "node_modules"
  ],
  "extends": "@buildeross/tsconfig/nextjs.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "types": ["@testing-library/jest-dom", "vitest/globals", "@buildeross/types/globals"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "node_modules/eslint-plugin-react/lib/types.d.ts",
    ".next/types/**/*.ts"
  ]
}
