{
  "name": "@buildeross/utils",
  "description": "Shared utilities and helper functions for BuilderOSS apps",
  "version": "0.2.2",
  "dependencies": {
    "bignumber.js": "^9.3.0",
    "sablier": "^2.0.1",
    "tinycolor2": "^1.4.2",
    "wink-porter2-stemmer": "^2.0.1"
  },
  "devDependencies": {
    "@buildeross/blocklist": "workspace:*",
    "@buildeross/constants": "workspace:*",
    "@buildeross/eslint-config-custom": "workspace:*",
    "@buildeross/ipfs-service": "workspace:*",
    "@buildeross/tsconfig": "workspace:*",
    "@buildeross/types": "workspace:*",
    "@types/node": "^22.15.21",
    "@types/tinycolor2": "^1.4.6",
    "bs58": "^6.0.0",
    "eslint": "8.57.1",
    "tsup": "^8.3.5",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./sablier": {
      "types": "./dist/sablier/index.d.ts",
      "import": "./dist/sablier/index.mjs",
      "require": "./dist/sablier/index.js"
    },
    "./wagmi": {
      "types": "./dist/wagmi/index.d.ts",
      "import": "./dist/wagmi/index.mjs",
      "require": "./dist/wagmi/index.js"
    },
    "./yup": {
      "types": "./dist/yup/index.d.ts",
      "import": "./dist/yup/index.mjs",
      "require": "./dist/yup/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.js"
    }
  },
  "files": [
    "dist/**/*",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "peerDependencies": {
    "@buildeross/blocklist": "0.2.2",
    "@buildeross/constants": "0.2.2",
    "@buildeross/ipfs-service": "0.2.2",
    "@buildeross/types": "0.2.2",
    "viem": "^2.44.2",
    "wagmi": "^2.18.1",
    "yup": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BuilderOSS/nouns-builder.git",
    "directory": "packages/utils"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo",
    "lint": "pnpm type-check && eslint src --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "types": "./dist/index.d.ts"
}
