{
  "name": "@buildeross/hooks",
  "description": "Shared React hooks for BuilderOSS apps",
  "version": "0.1.3",
  "dependencies": {
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@buildeross/constants": "workspace:*",
    "@buildeross/eslint-config-custom": "workspace:*",
    "@buildeross/ipfs-service": "workspace:*",
    "@buildeross/sdk": "workspace:*",
    "@buildeross/tsconfig": "workspace:*",
    "@buildeross/types": "workspace:*",
    "@buildeross/utils": "workspace:*",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "eslint": "8.57.1",
    "tsup": "^8.3.5",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.js"
    }
  },
  "files": [
    "dist/**/*",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "peerDependencies": {
    "@buildeross/constants": "0.1.3",
    "@buildeross/ipfs-service": "0.1.3",
    "@buildeross/sdk": "0.1.3",
    "@buildeross/types": "0.1.3",
    "@buildeross/utils": "0.1.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "swr": "^2.3.3",
    "viem": "^2.30.0",
    "wagmi": "^2.15.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BuilderOSS/nouns-builder.git",
    "directory": "packages/hooks"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo",
    "dev": "tsup --watch",
    "lint": "eslint src --fix",
    "type-check": "tsc --noEmit"
  },
  "types": "./dist/index.d.ts"
}
